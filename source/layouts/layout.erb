<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Central Theater Wine Shoppe" %></title>

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o), m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-48677355-1', 'centraltheaterwineshoppe.com');
      ga('send', 'pageview');
    </script>
    
    <%= stylesheet_link_tag "normalize", "style", "flexslider" %>
    <%= javascript_include_tag  "all" %>
  </head>
  
  <body class="<%= page_classes %>">
    <header class="name">
      Central Theater Wine Shoppe
    </header>
    <%= yield %>
    <footer>
      <div class="leftCol">
        Central Theater Wine Shoppe<br>
        212 Sewickley Ave.<br>
        Herminie, PA 15637<br>
        724-835-1122
      </div>
      <div class="rightCol">
        Hours:<br>
        Mon-Thur: 11-4<br>
        Fri-Sat: 11-5<br>
        Sun: Closed<br>
      </div>
      <div class="facebook">
        <p>Check us out on facebook!</p>
        <a href="http://facebook.com/centraltheaterwine" target="_blank"><img src="images/facebookicon.png" border="0" alt="facebook icon" /></a><br>
      </div>
    </footer>
  </body>
</html>